<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/button_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:columnCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayText">

        <Button
            android:id="@+id/button_clear_display"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="C"
            android:textSize="18sp"
            app:layout_column="4"
            app:layout_row="0"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/button_nine"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="9"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="0"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/button_eight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="8"
            android:textSize="18sp"
            app:layout_column="1"
            app:layout_row="0"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/button_seven"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="7"
            android:textSize="18sp"
            app:layout_column="2"
            app:layout_row="0"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/addition_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:textSize="18sp"
            app:layout_column="3"
            app:layout_row="0"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/button_six"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="6"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="1"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/button_five"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="5"
            android:textSize="18sp"
            app:layout_column="1"
            app:layout_row="1"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/button_four"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="4"
            android:textSize="18sp"
            app:layout_column="2"
            app:layout_row="1"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/subtraction_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:textSize="18sp"
            app:layout_column="3"
            app:layout_row="1"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/button_three"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="3"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="2"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/button_two"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="2"
            android:textSize="18sp"
            app:layout_column="1"
            app:layout_row="2"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/button_one"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1"
            android:textSize="18sp"
            app:layout_column="2"
            app:layout_row="2"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/button_zero"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="3"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/multiply_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="x"
            android:textSize="14sp"
            app:layout_column="3"
            app:layout_row="2"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/division_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="/"
            android:textSize="18sp"
            app:layout_column="3"
            app:layout_row="3"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/equalTo_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="="
            android:textSize="18sp"
            app:layout_column="2"
            app:layout_row="3"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/modulo_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="%"
            android:textSize="18sp"
            app:layout_column="1"
            app:layout_row="3"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="251dp" />


    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/displayText"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:textAlignment="textEnd"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>